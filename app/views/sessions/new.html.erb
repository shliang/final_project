<div class="row main-body">
	<div class='col-xs-4 col-xs-offset-4 text-center'>
		
		<br><br><br><br><br><br><br>
		
		<form action="<%= session_url %>" method="POST">
			<div class="form-group">
			  <input
			     name="authenticity_token"
			     type="hidden"
			     value="<%= form_authenticity_token %>">
	
				<label for="user_name"> <font color="white"> User Name </font> </label>
				<input type="text" name="user[username]" class='form-control' id="user_name">
			
				<br>
	
				<label for="user_password"> <font color="white"> Password </font> </label>
				<input type="password" name="user[password]" class='form-control' id="user_password">
	
			<br>
				<input type='submit' id="sign-in-button" value="Sign In" class="btn btn-default">
			</div>
		</form>
		<button class="demo-button btn btn-info btn-lg"> Demo </button>
	</div>
</div>


