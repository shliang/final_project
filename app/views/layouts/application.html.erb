<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
  <nav class="navbar navbar-default">
    <div class="navbar-header">
			<a class="navbar-brand" href="#"> <img src="/assets/logo_zenpost.jpg" width="90" height="30"> </a>
      <ul class="nav navbar-nav nav-pills nav-links">
	      <% if current_user %>
	      <li class='dropdown'>
	        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.username %>
						<span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
	          <li><a href="#/users"> Users </a> </li>
	          <li class='divider'></li>
	          <li><a href="#/users/<%= current_user.id %>"> Your Posts </a> </li>
	        </ul>
         </li>
      
      <div class='pull-right'>
        <li><%= button_to "Sign Out", session_url, :method => :delete, class: 'btn btn-danger' %></li>
      </div>
        
	      <% else %>
	      <div class="pull-right">
	        <%= link_to 'Sign Up', new_user_url, class: 'btn btn-primary' %>
	        <%= render "sessions/sign_in_form" %>
	      </div>
	      <% end %>

	      </ul>
      </div>
  </nav>


    <% if flash[:errors] %>
    <h3>Please fix the following errors:</h3>
    <ul>
      <% flash[:errors].each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
    <% end %>

    <div class='container'>    <%= yield %> </div>
	
	
	<% if flash[:errors] %>
		<ul>
			<% flash[:errors].each do |error| %>
			<li><%= error %></li>
			<% end %>
	  </ul>
	<% end %>

</body>
</html>
