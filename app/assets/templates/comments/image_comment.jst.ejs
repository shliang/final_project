<div id="comment-<%=comment.id%>">
	<div class="col-xs-1" style="padding-left: 0; padding-right:0;">
		<% var img %> 
		<% if (comment.get("author_id") == current_user_id) { %>
			<% img = current_user_imgURL %>
		<% } %>
		<img src="<%= img || comment.escape("image_url") %>" class="img-rounded" height="100%" width="100%">
	</div>

	<div class="col-xs-11 only-comment"></div>
</div>