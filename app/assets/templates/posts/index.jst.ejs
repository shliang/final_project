<div class='row'>
  <div class="col-xs-12">
	 	<div class="new-post">
	   	<button id="create-post"> New Post </button>
  	</div>
	</div>
</div>

<br>

<div class='row'>

	<div class="col-xs-10">
		
		
		<% if (posts.length === 0) { %>
		<div class="jumbotron">
		  <h4> You currently do not have any Posts Yet.</h4>
			<br>
			
			<h4> To Create a new post, click new post button Above! </h4>
			
			<br>
			
			<h4> Or you can follow users in the panel on the left and see their posts!</h4>
			
			<br>
			<h4> To see individual user's posts before following, please go to <a href="#/users"> users page</a>
		</div>
		<% } %>


		<% posts.each(function (post) { %>
		<div class="panel panel-default">
				<div class="panel-body">
				  <h4> <%= post.get("user").username %> </h4>
				  <h3> <a href="#/posts/<%= post.get('id')%>" > 
				  <%= post.escape('title') %>
					</a>
					</h3>
					<p> <%= post.escape('content') %> </p>
				</div>
			</div>
		<% }) %>

	</div>
	
	<div class="col-xs-2">
		<div class="user-follows"> </div>
	</div>

</div>

<div class='row'>
  <div class="col-xs-3">
		<a href="#/users" > Users </a> 
	</div>
</div>